// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id String @default(uuid()) @id
  userId String
  title String
  description String?
  deadline DateTime?
  done Boolean @default(false)
  createdAt DateTime @default(now())
  notifyCases ItemsOnCases[]
}

model NotifyCase {
  id Int @default(autoincrement()) @id
  name String
  description String
  items ItemsOnCases[]
}

model ItemsOnCases {
  item       Item     @relation(fields: [itemId], references: [id])
  itemId     String
  case   NotifyCase @relation(fields: [caseId], references: [id])
  caseId Int

  @@id([itemId, caseId])
}
